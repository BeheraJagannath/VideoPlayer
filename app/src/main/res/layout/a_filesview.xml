<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragements.History_fragment">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/thumbnail"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:shapeAppearanceOverlay="@style/CircleImageView"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/aa"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <RelativeLayout
                android:id="@+id/bb"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/video_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Video name"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/video_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/video_title"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="1.15GB"
                    android:textColor="#787E80"
                    android:textSize="11sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/dd"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"

                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@id/mor"
                android:backgroundTint="#1A2224"
                android:gravity="center"
                android:padding="1dp">

                <TextView
                    android:id="@+id/video_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:paddingTop="1dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="1dp"
                    android:text="08959505"
                    android:textColor="#787E80"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/video_menu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:src="@drawable/union2"
                    android:visibility="visible"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/mSelect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/chkbx"
                    android:visibility="gone"
                    tools:targetApi="lollipop" />




            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/item">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="10dp"
            android:background="#1A2123" />
    </RelativeLayout>


    <!-- TODO: Update blank fragment layout -->



</RelativeLayout>
</layout>